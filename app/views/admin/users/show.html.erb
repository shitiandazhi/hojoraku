<div class="container">
  <div class="row">
    <div class="col-10 mx-auto">
      <h3 class="my-5 text-center text-white"><%= @user.name %>さんの会員詳細</h3>
      <%= form_with model: @user, url: admin_user_path do |f| %>
        <table class="table">
          <tr>
            <th class="text-left text-white">会員ID</th>
            <td class="text-white"><%= @user.id %></td>
          </tr>
           <tr>
            <th class="text-left text-white">法人形態</th>
            <td class="text-white"><%= @user.company_from %></td>
          </tr>
          <tr>
            <th class="text-left text-white">法人名</th>
            <td class="text-white"><%= @user.name %></td>
          </tr>
             <tr>
            <th class="text-left text-white">フリガナ</th>
            <td class="text-white"><%= @user.name_kana %></td>
          </tr>
           <tr>
            <th class="text-left text-white">法人番号</th>
            <td class="text-white"><%= @user.company_number %></td>
          </tr>
           <tr>
            <th class="text-left text-white">郵便番号</th>
            <td class="text-white"><%= @user.post_code %></td>
          </tr>
           <tr>
            <th class="text-left text-white">住所</th>
            <td class="text-white"><%= @user.address %></td>
          </tr>
          <tr>
            <th class="text-left text-white">メールアドレス</th>
            <td class="text-white"><%= @user.email %></td>
          </tr>

          <tr>
           <th class="text-left text-white">会員ステータス</th>
              <% if @user.is_deleted == true %>
            <td class="text-danger">退会済み</td>
              <% else %>
            <td class="text-success">有効</td>
              <% end %>
          </tr>
        </table>
        <div class="form-group">
          <%= f.label :"会員ステータス", class:"col-4 text-white" %>
          <%= f.radio_button :is_deleted, false %>
          <%= f.label :is_deleted, "有効", class: "text-white" %>
          <%= f.radio_button :is_deleted, true %>
          <%= f.label :is_deleted, "退会", class: "text-white" %>
        </div>
        <div class="form-group col-11 d-flex justify-content-around">
          <%= f.submit '変更を保存', class: "btn btn-custom-color" %>
        </div>
      <% end %>
    </div>
  </div>
</div>

<style>
  .btn-custom-color {
    background-color: #007bff; /* 青色 */
    border: 2px solid #3498db; /* 枠線を付ける */
    color: #ffffff; /* 白色のテキスト */
  }

  .btn-custom-color:hover {
    background-color: #2980b9; /* ホバー時の色 */
    border-color: #2980b9; /* ホバー時の枠線色 */
  }
</style>
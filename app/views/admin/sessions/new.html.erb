<div class="container">
  <div class="row justify-content-center">
      <div class="col-12 text-center">
        <h2 class="my-5">ログイン</h2>
        <%= alert %>
      </div>

    <div class="col-12 text-center">

<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
 <div class="row justify-content-center my-3">
            <%= f.label :email, class: "col-lg-2"%><br />
            <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "col-lg-3" %>
          </div>

          <div class="row justify-content-center my-3">
            <%= f.label :password, class: "col-lg-2"%><br />
            <%= f.password_field :password, autocomplete: "current-password", class: "col-lg-3" %>
          </div>

          <% if devise_mapping.rememberable? %>
            <div class="field ml-5">
              <%= f.check_box :remember_me %>
              <%= f.label :remember_me %>
            </div>
  <% end %>

  <div class="actions">
    <%= f.submit "ログイン", class: "btn btn-primary my-3" %>
  </div>
<% end %>

<%= render "admin/shared/links" %>


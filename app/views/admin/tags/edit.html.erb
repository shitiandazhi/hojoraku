<div class="container">
  <div class="row">
    <div class="col-10 mx-auto">
      <h3 class="ml-5 my-5">タグ編集</h3>
      <div class="form-group">
        <%= form_with model: @tag, url: admin_tag_path do |f| %>
          <div class="form-group">
            <%= f.label "タグ名" %>
            <%= f.text_field :name, id: "inputname", class: "form-control" %>
          </div>
          <%= f.submit "変更を保存", class: "btn btn-custom-color my-3 mr-3" %>
        </div>
        <% end %>
      </div>
    </div>
  </div>

<style>
  .btn-custom-color {
    background-color: #007bff; /* 青色 */
    border: 2px solid #3498db; /* 枠線を付ける */
    color: #ffffff; /* 白色のテキスト */
  }

  .btn-custom-color:hover {
    background-color: #2980b9; /* ホバー時の色 */
    border-color: #2980b9; /* ホバー時の枠線色 */
  }
</style>
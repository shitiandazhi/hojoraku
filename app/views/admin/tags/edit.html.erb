<div class="container">
  <div class="row">
    <div class="col-10 mx-auto">
      <h3 class="ml-5 my-5">タグ編集</h3>
      <div class="form-group">
        <%= form_with model: @tag, url: admin_tag_path do |f| %>
          <div class="form-group">
            <%= f.label "タグ名" %>
            <%= f.text_field :name, id: "inputname", class: "form-control" %>
          </div>
          <%= f.submit "変更を保存", class: "btn btn-success my-3 mr-3" %>
        </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
<div class="container">
  <div class="row justify-content-center">
      <div class="col-12 text-center">
        <h2 class="my-5">ログイン</h2>
        <%= alert %>
      </div>

    <div class="col-12 text-center">

        <%= form_with model: @user, url: user_session_path do |f| %>
          <div class="row justify-content-center my-3">
            <%= f.label :email, class: "col-lg-2"%><br />
            <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "col-lg-3" %>
          </div>

          <div class="row justify-content-center my-3">
            <%= f.label :password, class: "col-lg-2"%><br />
            <%= f.password_field :password, autocomplete: "current-password", class: "col-lg-3" %>
          </div>

          <% if devise_mapping.rememberable? %>
            <div class="field ml-5">
              <%= f.check_box :remember_me %>
              <%= f.label :remember_me %>
            </div>
          <% end %>

          <div class="actions">
            <%= f.submit "ログイン", class: "btn btn-primary my-3 btn-custom-color" %>
          </div>
        <% end %>

        <!--ゲストログイン-->
          <div class="col-lg-12 text-center my-3">
            <%= link_to "ゲストログイン（閲覧用）", users_guest_sign_in_path, class: "btn btn-secondary mb-3  btn-custom-color sign_in", method: :post %>
          </div>

    </div>
  </div>
        <div class="row justify-content-center">
        <h5 class="mb-5 mr-3", style="width:270px;">会員登録がお済みでない方は</h5>
        <%= render "public/shared/links" %>
        </div>
</div>

<style>
  .btn-custom-color {
    background-color: #007bff; /* 青色 */
    border: 2px solid #3498db; /* 枠線を付ける */
    color: #ffffff; /* 白色のテキスト */
  }

  .btn-custom-color:hover {
    background-color: #2980b9; /* ホバー時の色 */
    border-color: #2980b9; /* ホバー時の枠線色 */
  }
</style>
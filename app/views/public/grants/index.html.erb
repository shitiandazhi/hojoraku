<div class="container text-center">
  <div class="alert alert-info" role="alert">
    <%= notice %><%= alert %>
  </div>
  <h1 class="py-5">投稿一覧</h1>
  <style>
    .custom-link:hover {
      background-color: #0056b3; /* ホバー時の背景色 */
    }
  </style>
  <div class="row justify-content-center">
    <% if user_signed_in? %>
      <div class="col-lg-3 col-md-6 mb-4">
        <%= link_to "投稿", new_grant_path, class: 'btn btn-md btn-success text-white custom-link btn-block' %>
      </div>
    <% end %>
  </div>
  <%= render 'index', grants: @grants, user: @user %> <!-- 補助金一覧を表示する部分 -->
</div>
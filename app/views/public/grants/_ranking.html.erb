<table>
  <tr>
    <th>ランク</th>
    <th>投稿名</th>
    <th>いいね数</th>
  </tr>
  <% @favorites_ranks.each.with_index(1) do |rank, i| %>
  <% if i == 1 %>
  <tr>
    <td><%= rank.name %></td>
    <td><%= rank.favorites.count %></td>
  </tr>
  <% elsif i == 2 %>
  <tr>
    <td><%= rank.name %></td>
    <td><%= rank.favorites.count %></td>
  </tr>
  <% elsif i == 3 %>
  <tr>
    <td><%= rank.name %></td>
    <td><%= rank.favorites.count %></td>
  </tr>
  <% else %>
  <tr>
    <td><%= i %>位</td>
    <td><%= rank.name %></td>
    <td><%= rank.favorites.count %></td>
  </tr>
  <% end %>
  <% end %>
</table>